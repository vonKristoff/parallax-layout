/**
 * Standardising the header and body tags
 */
p
  font-size: 1rem
  margin-bottom: 1.3rem
h1,h2,h3,h4,
  margin: 1.414rem 0 0.5rem
  font-weight: inherit
  line-height: 1.42
h1,
  margin-top: 0
  font-size: 3.998rem
h2,
  font-size: 2.827rem
h3,
  font-size: 1.999rem
h4,
  font-size: 1.414rem
h5,
  font-size: 1.121rem
h6,
  font-size: .88rem
small,
  font-size: 0.707em
pre,
code
  font-family: 'monospace'
.italic
  font-style: italic
.thin
  font-weight: 100
.bold
  font-weight: bold